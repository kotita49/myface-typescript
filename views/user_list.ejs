<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>

<body>
<h1>Users</h1>
<ul>
    <% results.forEach(function(user) {%>
        <li>
           <h4> <%= user.name %></h4>
            
            <img src= '<%= user.profileImageUrl %>' width="150" height="150">
            Username: <%= user.username %>, Email: <%= user.email %>
          <br>
          <form method="get" action="/users/<%= user.id %>/">
            <button type="submit">User info</button>
         </form>
        </li>
    <% }); %>
    </ul>
    </body>
    <footer>
<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>
<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>
    </footer>
    <%- include('_footer') -%>

</html>